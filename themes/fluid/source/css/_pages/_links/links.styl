.links
  .card
    box-shadow none

  .card-body
    margin 1rem 0
    padding 1rem
    border-radius .3rem
    display block

    .row
      margin 0
      height 3.5rem
      flex-wrap nowrap

    &:hover
      transition-duration 0.3s
      background-color #ebedef

      .link-avatar
        transform scale(1.1)

.link-avatar
  width 3rem
  height 3rem
  border-radius 1.5rem
  margin-right .75rem
  object-fit cover
  transition-duration 0.3s

.link-text
  display grid
  flex-direction column
  justify-content center

.link-title
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
  color #2f4154
  font-weight bold

.link-intro
  max-height 2rem
  font-size 0.85rem
  line-height 1.2
  color #a3a3a3
  display -webkit-box
  -webkit-box-orient vertical
  -webkit-line-clamp 2
  text-overflow ellipsis
  overflow hidden

@media (max-width 767px)
  .links
    display flex
    flex-direction column
    justify-content center
    align-items center

    .card
      padding-left 2rem
      padding-right 2rem

@media (min-width 768px)
  .link-text:only-child
    margin-left 1rem
